<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.natembook.monopdroid"
    android:versionCode="1"
    android:versionName="0.5.0" android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="false" >
        <activity
            android:name=".gamelist.GameListActivity"
            android:label="@string/title_activity_server_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".board.BoardActivity"
            android:label="@string/title_activity_board"
            android:theme="@style/BoardTheme"
            android:windowSoftInputMode="stateHidden|adjustPan" />
    </application>

</manifest>
